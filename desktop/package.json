{
  "name": "empathai-desktop",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite-node src/dev.ts",
    "build": "tsc && electron-builder",
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-edge-js": "^17.6.0",
    "auto-launch": "^5.0.6",
    "axios": "^1.7.7",
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "tslib": "^2.7.0",
    "typescript": "^5.5.4",
    "vite-node": "^2.0.5"
  },
  "build": {
    "appId": "ai.empath.desktop",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "files": [
      "dist/",
      "assets/",
      "package.json"
    ]
  }
}
